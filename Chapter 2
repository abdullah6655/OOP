using namespace std;
int main(){
	int a;
	cout<<"Enter a number ";
	cin>>a;
	cout<<"Integer"<<"\tSquare"<<"\tCube"<<endl;
	for( int i=0; i<a; i++)
	{
		cout<<i<<"\t"<<"  "<<i*i<<"       "<<i*i*i<<endl;
		
	
	}
