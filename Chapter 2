{

	cout<<endl<<"\t*********""\t****""           *""          *"<<endl;
	cout<<"\t*\t*""     *""     *""         ***""       *   *"     <<endl;
	cout<<"\t*\t*""    *""       *""       *****""     *     *"        <<endl;
	cout<<"\t*\t*""    *""       *""      *******""   *       *"          <<endl;
	cout<<"\t*\t*""    *""       *""         *""       *     *"        <<endl;
	cout<<"\t*\t*""    *""       *""         *""        *   *"         <<endl;
	cout<<"\t*\t*""     *""     *""          *""         * *"         <<endl;
	
	cout<<"\t*********""       ****""           *""          *";



}

