using namespace std;

int main ()
 {
 // Part A
 cout << "1 2 3 4\n";

 // Part B
 cout << "1 " << "2 " << "3 " << "4\n";

 // Part C
 cout << "1 ";
 cout << "2 ";
 cout << "3 ";
 cout << "4" << endl;

 return 0;
 }
